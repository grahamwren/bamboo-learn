.container-fluid.align-middle.user_form
  h2.my-4 = 'Create Course'
  = form_for @course do |f|
    .form-group
      = f.hidden_field :id
    .form-group
      = f.label :short_name, 'Short Name'
      = f.text_field :short_name, class: 'form-control', required: true
      small.error = 'Short name is required and must be less than 10 characters'
    .form-group
      = f.label :long_name, 'Long Name'
      = f.text_field :long_name, class: 'form-control', required: true
      small.error = 'Long name is required and must be less than 255 characters'
    .form-group
      = f.label :description, 'Description'
      = f.text_field :description, class: 'form-control'
    .form-group
      = f.label :instructor
      .select
        = f.collection_select(:instructor_id, User.teacher, :id, :name, :prompt => true)
      small.error = 'Instructor is required'
    .form-group
      = f.submit class: 'form-control'